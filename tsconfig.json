{
  "compileOnSave": true,
  "emitDecoratorMetadata": true,
  "experimentalDecorators": true,
  "compilerOptions": {
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strict": true,
      "baseUrl": "./",
      "outDir": "./dist",
      "rootDir": "./src",
      "target": "es2016",
      "module": "commonjs",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "paths": {
          "@/*" : [
              "./src/*"
          ],
          "@modules/*" :[
              "./src/modules/*"
          ],
          "@app/*": [
              "./src/app/*"
          ],
          "@database/*": [
              "./src/database/*"
          ],
      },
  },
  "scripts": {
      "build": "tsc",
      "start": "node ./dist/index.js",
      "dev": "tsc && nodemon ./dist/index.js"
  },
  "exclude": [
      "node_modules"
  ],
  "include": [
      "**/*.ts",
      ".env"
  ]
}